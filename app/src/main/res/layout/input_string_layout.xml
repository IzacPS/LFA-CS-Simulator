<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/input_string_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_string_text_input_layout"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        android:hint="String de Entrada"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_weight="1">
        <app.fs.simulator.custom.CustomDefocusableTextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/random_button"
        android:layout_margin="8dp"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/media_buttons_select_effect"
        android:src="@drawable/ic_baseline_shuffle_24"/>

</LinearLayout>